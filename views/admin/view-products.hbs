<section>
    <div class="container">
        <div class="row mt-3">
           <a href="admin/addproduct" class="btn btn-primary ml-auto">Add Products</a>
        </div>
    </div>
    <table class="table mt-3">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Name Of Product</th>
      <th scope="col">Catogary</th>
      <th scope="col">Price</th>
      <th scope="col">Image</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
      {{#each product}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.Name}}</td>
      <td>{{this.Catogary}}</td>
      <td>{{this.Price}}</td>
      <td><img src="/productimages/w300/{{this._id}}.png" alt="" style="height: 50px; width: auto;"></td>
      <td><a href="/admin/editproduct/{{this._id}}" class="btn btn-success">Edit</a>
      <a href="/admin/deleteproduct/{{this._id}}" class="btn btn-danger" onclick="return confirm('Do you want to delete {{this.Name}}')">Delete</a>
      </td>

      
    </tr>
    {{/each}}
    
</table>
</section>