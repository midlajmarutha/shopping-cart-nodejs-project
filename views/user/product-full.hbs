<section style="min-height: 90vh;">

    <div class="container">
        <div class="row">
            <div class="col-md-6 imagecap">
                <img src="/productimages/w500/{{Product._id}}_0.png" style="max-width: 100%;" alt="" id="main_image">
                <div class="image-options" style="display: flex; align-items: center; justify-content: space-between; margin-top: 2em;">
                    <div class="arrow-left">
                        <img src="/images/arrow-left.svg" alt="" style="width: 30px;">
                        
                    </div>
                    <div class="images">
                        {{#each Product.Images}}
                        <img src="/productimages/w200/{{this}}" alt="" style="max-width: 50px;" id="{{this}}" onclick="(changeImage(event))">
                        {{/each}}
                    </div>
                    <div class="arrow-right">
                        <img src="/images/arrow-right.svg" alt="" style="width: 30px;">
                    </div>
                </div>
            </div>
            <div class="col-md-6" style="padding-top: 5rem;">
                <h2>{{Product.Name}}</h2>
                <h5 class="text-danger">RS.{{Product.Price}}</h5>
                <p>{{Product.Catogary}}</p>
                <p>{{Product.Description}}</p>
                <div class="row">
                    <a href="/addtocart/{{Product._id}}" class="btn col-md-5 btn-dark" style="border-radius: 20px;">Add To Cart</a>
                    <a href="" class="btn col-md-5 btn-light ml-1" style="border: 1px solid black; border-radius: 20px;">Buy Now</a>
                </div>
            </div>
        </div>
    </div>
</section>
<section style=" position: static;">

    <div class="container">
        <div class="row pt-3">
            <div class="col-md-6" style="overflow-y: scroll; max-height: 50vh;">
                <h1>Comments</h1>
                {{#each Product.Comments}}
                <div class="card pl-2" >
                    <h5 style="font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif; font-weight: bold; color: gray;">{{this.user}}</h5>
                    <h6>{{this.datetime}}</h6>
                    <p>{{this.Comment}}</p>
                </div>
                {{/each}}
                
            </div>
            <div class="col-md-6" style="padding-top: 5rem;">
                <form action="./new-comment?id={{Product._id}}" enctype="multipart/form-data" method="post">
                    
                    <div class="form-group">
                        <label for="">Add Comment</label>
                        <input type="text" name="Comment" class="form-control" required>
                    </div>
                    
                    <button type="submit" class="btn btn-dark" style="border-radius: 20px;">Comment</button>
            </div>
            </form>
        </div>
    </div>
    </div>
</section>
<script> 
    function changeImage(image){
        console.log(image);
        let id = image.target.id;
        document.getElementById('main_image').src = `/productimages/w500/${id}`;
        document.getElementById(`${id}`).style = "max-width: 50px; border: 1px solid black;"
        
    }
</script>